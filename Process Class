#include <iostream>
#include <stdio.h>
using namespace std;

class Process{
private:
    string process_id;
    int wait_time,burst_time, priority;
    
public:
    Process()
    {
        process_id = "";
        wait_time = 0;
        burst_time = 0;
        priority = 0;
    }
    
    void processID(string name)
    {
        process_id = name;
    }
    
    void addWaitTime(int wait)
    {
        wait_time = wait;
    }
    
    void addBurstTime(int burst)
    {
        burst_time = burst;
    }
    
    void addPriority(int time)
    {
        priority = time;
    }
    
    int getWaitTime(int wait)
    {
        return wait_time;
    }
    
    int getBurstTime(int burst)
    {
        return burst_time;
    }
    
    int getPriority(int time)
    {
        return priority;
    }
    
    
};
